{
    "container": {
        "type": "DOCKER",
        "docker": {
            "network": "BRIDGE",
            "portMappings": [
                {
                    "protocol": "tcp",
                    "containerPort": 5000,
                    "hostPort": 0
                }
            ],
            "image": "{{.image}}:{{.tag}}",
            "forcePullImage": true
        }
    },
    "mem": 512,
    "cpus": 0.1,
    "instances": {{.instances}},
    "id": "{{.id}}",
    "labels": {
        "MARATHON_SINGLE_INSTANCE_APP": true
    },
    "env": {
        "EMAIL_HOST": "{{.emailHost}}",
        "REPORTING_SENDER": "{{.reportingSender}}",
        "REPORTING_TARGET": "{{.reportingTarget}}",
        "FBL_PARTNER_HEADER": "{{.fblPartnerHeader}}",
        "FBL_PASSWORD": "{{.fblPassword}}",
        "FBL_USER": "{{.fblUser}}",
        "SNDS_KEY": "{{.sndsKey}}",
        "AS_NUMBER": "{{.asNumber}}",
        "SPAMHAUS_DOMAIN_NAME": "{{.spamhausDomainName}}",
        "MONGO_DB": "{{.mongoDB}}",
        "MONGO_HOST": "{{.mongoHost}}",
        "MONGO_PASSWORD": "{{.mongoPassword}}",
        "MONGO_PORT": "{{.mongoPort}}",
        "MONGO_USER": "{{.mongoUser}}",
        "POSTGRES_DB": "{{.postgresDB}}",
        "POSTGRES_HOST": "{{.postgresHost}}",
        "POSTGRES_PASSWORD": "{{.postgresPassword}}",
        "POSTGRES_PORT": "{{.postgresPort}}",
        "POSTGRES_USER": "{{.postgresUser}}"
    },
    "constraints": [["hostname", "UNIQUE"]]
}

